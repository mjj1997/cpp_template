{
    "version": 3,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "inherits": [
                "common"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/release",
            "inherits": [
                "common"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "debug"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_CXX_FLAGS": "/permissive- /W4 /w44365 /external:W3"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "release"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "inherits": [
                "debug"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-pedantic-errors -Wall -Weffc++ -Wextra -Wconversion -Wsign-conversion"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "inherits": [
                "release"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }
    ]
}
